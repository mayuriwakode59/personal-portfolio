}


/* CONTACT */

.contact{
    background:#0f172a;
    color:white;
    text-align:center;
}

.contact-form{
    max-width:400px;
    margin:auto;
    display:flex;
    flex-direction:column;
    gap:15px;
}

.contact-form input,
.contact-form textarea{
    padding:12px;
    border:none;
    border-radius:6px;
}


/* FOOTER */

footer{
    background:#020617;
    color:white;
    text-align:center;
    padding:15px;
}


/* RESPONSIVE */

@media(max-width:768px){

    .header{
        padding:15px 20px;
    }

    section{
        padding:80px 20px;
    }

    .home-text h1{
        font-size:32px;
    }

    .home-container{
        flex-direction:column;
        text-align:center;
    }
}
